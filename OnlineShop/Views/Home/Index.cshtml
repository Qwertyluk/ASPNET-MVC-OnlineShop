@model OnlineShop.Models.HomeIndexModel

@using OnlineShop.Helpers

@{
    ViewBag.Title = "Sklep Internetowy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav id="categoryHorizontalMenu">
    <ul>
        @foreach (var item in Model.ExtantCategories)
        {
            <li>
                <a href="@Url.Action("DisplayProductsWithCategory", "Product", new { id = item.CategoryId })">
                    @item.Name
                </a>
            </li>
        }
    </ul>
</nav>

<section style="margin-top:200px;">
    <ul style="display:table; margin: auto;">
        @foreach (var item in Model.OnSaleProducts)
        {
            <li style="margin:auto; display:table-cell; padding-left:50px;">
                <article>
                    <div class="product">
                        <a class="addToCart" href="@Url.Action("AddToCart", "Cart", new { id = item.ProductId })">
                            <img src="@Url.GetImagePath("cart.png")" />
                        </a>
                        <a class="productLink" href="@Url.Action("ShowInformation", "Product", new { id = item.ProductId })">
                            <div style="position:relative;">
                                <img class="saleIcon" src="@Url.GetImagePath("sale.png")" />
                                <img class="productImage" src="@Url.GetProductImagePath(item.ImageName)" />
                                <h1 id="imageHeader">@item.Name</h1>
                            </div>
                        </a>
                    </div>
                </article>
            </li>
        }
    </ul>
</section>


<section style="margin-top:200px;">
    <ul style="display:table; margin: auto;">
        @foreach (var item in Model.NewProducts)
        {
            <li style="margin:auto; display:table-cell; padding-left:50px;">
                <article>
                    <div class="product" style="position:relative;">
                        <a class="addToCart" href="@Url.Action("AddToCart", "Cart", new { id = item.ProductId })">
                            <img src="@Url.GetImagePath("cart.png")" />
                        </a>
                        <a class="productLink" href="@Url.Action("ShowInformation", "Product", new { id = item.ProductId })">
                            <div style="position:relative;">
                                <img class="saleIcon" src="@Url.GetImagePath("new.png")" />
                                <img class="productImage" src="@Url.GetProductImagePath(item.ImageName)" />
                                <h1 id="imageHeader">@item.Name</h1>
                            </div>
                        </a>
                    </div>
                </article>
            </li>
        }
    </ul>
</section>