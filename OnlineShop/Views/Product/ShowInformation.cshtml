@model OnlineShop.Models.Product

@using OnlineShop.Helpers

@{
    ViewBag.Title = "Informacje o Produkcie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mainContainer">
    <div class="navigationPath" style="margin-bottom:25px;">
        <img src="@Url.GetImagePath("house.png")" />
        <h3>@Html.MvcSiteMap().SiteMapPath()</h3>
    </div>
    <div>
        <div class="mainContainerLeft">
            <img id="productImage2" src="@Url.GetProductImagePath(Model.ImageName)" />
        </div>

        <div class="mainContainerRight">

            <div id="productTable">

                <div id="productName">
                    @Model.Name
                </div>

                <a href="@Url.Action("AddToCart", "Cart", new { id = Model.ProductId })">
                    <div id="productPrice">
                        <span style="font-size:35px;">@String.Format("{0:0.00}", Model.Price)</span> <span style="font-size:15px;">PLN</span>
                    </div>
                </a>
            </div>

            <div id="productInfo">
                <span>
                    @Model.Brand
                </span>
            </div>

            <br />
            <hr width=65% />

            <div id="productDescription" ">
                <span>
                    @Model.Description
                </span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div id="manageProductButtons">
                    <a class="linkButton" href="@Url.Action("EditProduct", "Manage", new { productId = Model.ProductId })" style="float:left;">Edytuj</a>
                    <a class="linkButton" href="@Url.Action("DeleteProduct", "Manage", new { productId = Model.ProductId })" style="float:right;">Usuń</a>
                </div>
            }
        </div>
    </div>
</div>

