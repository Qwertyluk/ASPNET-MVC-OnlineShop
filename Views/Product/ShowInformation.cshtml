@model OnlineShop.Models.Product

@using OnlineShop.Helpers

@{
    ViewBag.Title = "Informacje o Produkcie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article>
    <div id="mainContainer">

        <div id="mainContainerLeft">
            <img id="productImage" src="@Url.GetProductImagePath(Model.ImageName)" />
        </div>

        <div id="mainContainerRight">

            <div id="productTable">

                <div id="productName">
                    @Model.Name
                </div>

                <a href="@Url.Action("AddToCart", "Cart", new { id = Model.ProductId })">
                    <div id="productPrice">
                        <span style="font-size:35px;">@String.Format("{0:0.00}", Model.Price)</span> <span style="font-size:15px;">PLN</span>
                    </div>
                </a>
            </div>

            <div id="productInfo">
                <span>
                    @Model.Brand
                </span>
            </div>

            <br />
            <hr width=65% />

            <div id="productDescription">
            <span>
                @Model.Description
            </span>
        </div>

        </div>

    </div>
</article>

