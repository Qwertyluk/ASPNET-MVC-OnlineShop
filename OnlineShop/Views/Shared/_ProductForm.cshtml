@model OnlineShop.Models.ViewModels.ProductAdditionViewModel


@Html.AntiForgeryToken()

<table>
    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.Name)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.Name)<span class="asterisk">*</span>
        </td>
        <td class="editor">
            @Html.EditorFor(m => m.Product.Name)
        </td>
    </tr>

    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.Brand)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.Brand)<span class="asterisk">*</span>
        </td>
        <td class="editor"> 
            @Html.EditorFor(m => m.Product.Brand)
        </td>
    </tr>

    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.Description)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.Description)
        </td>
        <td class="editor">
            @Html.EditorFor(m => m.Product.Description)
        </td>
    </tr>

    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.Price)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.Price)<span class="asterisk">*</span>
        </td>
        <td class="editor">
            @Html.EditorFor(m => m.Product.Price)
        </td>
    </tr>

    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.IsOnSale)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.IsOnSale)
        </td>
        <td class="editor">
            @Html.EditorFor(m => m.Product.IsOnSale)
        </td>
    </tr>

    <tr>
        <td></td>
        <td class="validationMessage" colspan="2">
            @Html.ValidationMessageFor(m => m.Product.IsSold)
        </td>
    </tr>
    <tr>
        <td class="labelForEditor">
            @Html.LabelFor(m => m.Product.IsSold)
        </td>
        <td class="editor">
            @Html.EditorFor(m => m.Product.IsSold)
        </td>
    </tr>

    <tr>
        <td class="labelForEditor">
            Wybierz kategorię
        </td>
        <td class="editor">
            @Html.DropDownListFor(m => m.Product.CategoryId, new SelectList(Model.Categories, "CategoryId", "Name"))
        </td>
    </tr>

    <tr>
        <td>
            Wybierz obrazek produktu
        </td>
        <td class="editor">
            <input type="file" name="file" />
        </td>
    </tr>

    @if (ViewData.ModelState["FileError"] is object && ViewData.ModelState["FileError"].Errors.Any())
    {
        <tr>
            <td colspan="2" class="validationMessage">
                @ViewData.ModelState["FileError"].Errors.First().ErrorMessage
            </td>
        </tr>
    }

    @if (Model.AdditionSucceed.HasValue && Model.AdditionSucceed.Value)
    {
        <tr>
            <td colspan="2" class="confirmMessage">
                <span>Pomyślnie wprowadzono zmiany</span>
            </td>
        </tr>
    }

    <tr>
        <td colspan="2" class="submitButtonColumn">
            <input class="submitButton" value="Wprowadź" type="submit" />
        </td>
    </tr>

    <tr>
        <td class="message" colspan="2">
            * - Pola sa wymagane
        </td>
    </tr>

</table>