<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />
</head>
<body>

    <header style="background-color: black; height: 100px; width: 100%;">
        <div style="height: 100px; width: 75%; margin: 0 auto;">
            <div id="logo">
                <div class="title">
                    <a href="@Url.Action("Index", "Home")">
                        Sklep internetowy
                    </a>
                </div>
                <div class="underTitle">
                    Sprzedaż sprzętu sportowego
                </div>
            </div>

            <nav>
                <ul>
                    <li>
                        <a class="menuElement" href="@Url.Action("Index", "Home")">
                            Strona główna
                        </a>
                    </li>
                    <li>
                        <a class="menuElement" href="@Url.Action("StaticSites", "Home", new { name = "AboutUs" })">
                            O nas
                        </a>
                    </li>
                    <li>
                        <a class="menuElement" href="@Url.Action("StaticSites", "Home", new { name = "Contact" })">
                            Kontakt
                        </a>
                    </li>
                    <li>
                        <a class="menuElement" href="link">
                            Koszyk
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div class="footer">
            <nav style="margin: auto">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Strona główna</a></li>
                    <li><a href="@Url.Action("StaticSites", "Home", new { name = "AboutUs" })">O nas</a></li>
                    <li><a href="@Url.Action("StaticSites", "Home", new { name = "Policy" })"><span>Regulamin</span></a></li>
                    <li><a href="@Url.Action("StaticSites", "Home", new { name = "Contact" })">Kontakt</a></li>
                    <li><span style="color:white">Copyright &copy; Sklep internetowy</span></li>
                </ul>
            </nav>
        </div>
    </footer>

</body>
</html>